{
    "name": "Baseline_Convolutional",
    "n_gpu": 1,
    "arch": {
        "type": "ConvolutionalBaseline",
        "args": {
            "n_features": 129,
            "n_segments": 8
        }
    },
    "data_loader": {
        "type": "STFTDataLoader",
        "args": {
            "data_dir": "data/processed/edinburgh-noisy-speech-db/train.pkl",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "squared_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}